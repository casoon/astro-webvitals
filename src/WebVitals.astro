          const navEntry = performance.getEntriesByType('navigation')[0];
          if (navEntry && navEntry.domainLookupEnd > navEntry.domainLookupStart) {
            vitals.DNS = Math.round(navEntry.domainLookupEnd - navEntry.domainLookupStart);
